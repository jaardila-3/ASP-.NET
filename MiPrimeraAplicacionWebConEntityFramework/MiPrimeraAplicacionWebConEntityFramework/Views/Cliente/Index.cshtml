@using MiPrimeraAplicacionWebConEntityFramework.Models
@model List<ClienteCLS>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("Agregar","Agregar","Cliente",null,new { @class="btn btn-primary"})

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td width="10%"><strong>ID Cliente</strong></td>
            <td width="20%"><strong>Nombre Cliente</strong></td>
            <td width="20%"><strong>Apellido Paterno</strong></td>
            <td width="20%"><strong>Apellido Materno</strong></td>
            <td width="20%"><strong>Direccion</strong></td>
            <td width="10%"><strong>Sexo</strong></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.IDCliente</td>
            <td>@item.Nombre</td>
            <td>@item.APPaterno</td>
            <td>@item.APMaterno</td>
            <td>@item.Direccion</td>
            <td>@item.IDSexo</td>
        </tr>
        }

    </tbody>
</table>