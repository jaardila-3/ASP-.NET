@using MiPrimeraAplicacionWebConEntityFramework.Models
@model List<SucursalCLS>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("Agregar", "Agregar", "Sucursal", null, new { @class = "btn btn-primary" })

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td width="10%"><strong>ID Sucursal</strong></td>
            <td width="20%"><strong>Nombre Sucursal</strong></td>
            <td width="20%"><strong>Direccion Sucursal</strong></td>
            <td width="10%"><strong>Telefono Sucursal</strong></td>
            <td width="10%"><strong>Email Sucursal</strong></td>
            <td width="20%"><strong>Fecha Apertura Sucursal</strong></td>
            <td width="10%">Operaciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.IDSucursal</td>
            <td>@item.Nombre</td>
            <td>@item.Direccion</td>
            <td>@item.Telefono</td>
            <td>@item.Email</td>
            <td>@item.FechaApertura</td>
            <td>
                @Html.ActionLink(" ", "Editar", "Sucursal", new { id = @item.IDSucursal }, new { @class = "glyphicon glyphicon-edit btn btn-primary" })
                @Html.ActionLink(" ", "Eliminar", "Sucursal", new { id = @item.IDSucursal }, new { @class = "glyphicon glyphicon-trash btn btn-danger" })
            </td>
        </tr>
        }

    </tbody>
</table>